<BinGL>:
    
    bin1: bin1
    id: bins
    rows: 2
    padding: 40
    spacing: 80
    
        
             
                
    BoxLayout:
        Button:
            id: bin1
            background_normal: 'red.png'
            text: "hello"
            size_hint: 0.5, 0.0
            
                 
            
    BoxLayout:
        Button:
            text: "refresh"
            on_press: bin1.size_hint[1] = bins.incoming()
        Button:
            text: "start updating"
            on_press: root.update()
            
